<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#696969"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".ConnectionActivity">

    <TextView
        android:id="@+id/display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No Beans found in vicinity. \n Make sure bluetooth is turned on."
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginBottom="40dp"
        android:textSize="20dp"
        android:textColor="#ffff00"
        />

    <TextView
        android:id="@+id/connect"
        android:text="Connect"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/connect_outline"
        android:gravity = "center"
        android:textColor="#aaff69"
        android:textSize = "24dp"
        android:alpha="0.0"/>
</FrameLayout>
